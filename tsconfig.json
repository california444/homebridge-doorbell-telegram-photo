{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "lib": [
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018"
    ],
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false
  },
  "include": [
    "./src/**/*",
    "./jest.config.ts" 
  ]
}
